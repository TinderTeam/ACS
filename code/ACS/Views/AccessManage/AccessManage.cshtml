<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>门禁权限管理</title>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
        <link href="../../script/demo.css" rel="stylesheet" type="text/css" />
        <script src="../../Scripts/boot.js" type="text/javascript"></script>
 <style>
     .my-label
     {
         padding-left: 1px;
         width: 200px;
         text-align:right;
     }
      .my-result
     {
         padding-left: 1px;
         width: 200px;
         text-align:left;
     }

     </style>
    </head>
<body> 
<style type="text/css">
    html, body{
        margin:0;padding:0;border:0;width:100%;height:100%;overflow:hidden;
    }    
</style>

<div class="mini-fit" >
    <div class="mini-panel" title="门禁权限管理" iconCls="icon-add" style="width:100%;height:100%;" 
    showToolbar="false" showCloseButton="false" showFooter="true">
       
        
        <!--body-->

         <div class="mini-splitter" style="width:100%;height:100%;">
            <div size="200px" showCollapseButton="true">
                <!----设备树--->
                        <!----设备树--->
                        <ul id="deviceTree" class="mini-tree" url="AccessList" style="width:inherit;padding:3px;" 
                            showTreeIcon="true" textField="text" idField="id" parentField="pid" resultAsTree="false">
                        </ul>
  
            </div>
            <!----设备信息栏--->
            <div showCollapseButton="true">
                <div style="margin-left: 30px;">
                    <p>门禁权限</p>

                     <div class="mini-toolbar" style="border-bottom:0;padding:0px;">
                        <table style="width:100%;">
                            <tr>
                                <td style="width:100%;">
                                    <a class="mini-button" iconCls="icon-add" onclick="add()">增加</a>
                                    <a class="mini-button" iconCls="icon-remove" onclick="remove()">删除</a>       
                                </td>                             
                            </tr>
                        </table>           
                    </div>
                    <div id ="datagrid1" class="mini-datagrid" style="width:100%;height:100%;" allowResize="true"
                        url="#"  idField="UserID" multiSelect="true">
                        <div property="columns">
                            <!--<div type="indexcolumn"></div>        -->
                            <div type="checkcolumn" ></div>                  
                            <div field="UserID" width="120" headerAlign="center" allowSort="true">用户系统ID</div>    
                            <div field="UserName" width="120" headerAlign="center" allowSort="true">用户名</div>    
                            <div field="UserDesc" width="120" headerAlign="center" allowSort="true">用户描述</div>
                            <div header="日志">
                                <div property="columns">
                                    <div field="CreateUserID" width="120" headerAlign="center" allowSort="true">创建者ID</div>   
                                    <div field="CreateDate" width="120" headerAlign="center" allowSort="true">创建时间</div>
                                    <div field="CodifyUserID" width="120" headerAlign="center" allowSort="true">最后编辑者ID</div>
                                    <div field="CodifyDate" width="120" headerAlign="center" allowSort="true">最后编辑时间</div> 
                                </div>
                            </div>                            
                        </div>
                    </div>                    
                </div>
            </div>        
        </div>

    </div>
</div>
    <script type="text/javascript">
        mini.parse();
        var grid = mini.get("#datagrid1");
        grid.load();

        function add() {
            mini.open({
                url: "../AccessManage/AccessSelect",
                title: "新增权限", width: 600, height: 400,
                onload: function () {

                },
                ondestroy: function (action) {
                    grid.reload();
                }
            });
        }


        function remove() {

            var rows = grid.getSelecteds();

            if (rows.length > 0) {
                if (confirm("确定删除选中记录？")) {

                    var ids = [];
                    for (var i = 0, l = rows.length; i < l; i++) {
                        var r = rows[i];
                        ids.push(r.UserID);
                    }
                    var id = ids.join(',');
                    grid.loading("操作中，请稍后......");
                    $.ajax({
                        url: "../AccessManage/Remove?idstr=" + id,
                        success: function (text) {
                            grid.reload();
                        },
                        error: function () {
                        }
                    });
                }
            } else {
                alert("请选中一条记录");
            }
        }
    </script>
        
    </body>
</html>