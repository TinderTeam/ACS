<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>门禁权限管理</title>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
        <link href="../../script/demo.css" rel="stylesheet" type="text/css" />
        <script src="../../Scripts/boot.js" type="text/javascript"></script>
 <style>
     .my-label
     {
         padding-left: 1px;
         width: 200px;
         text-align:right;
     }
      .my-result
     {
         padding-left: 1px;
         width: 200px;
         text-align:left;
     }

     </style>
    </head>
<body> 
<style type="text/css">
    html, body{
        margin:0;padding:0;border:0;width:100%;height:100%;overflow:hidden;
    }    
</style>

<div class="mini-fit" >
        <!--body-->
         <div class="mini-splitter" style="width:100%;height:100%;">
            <div size="200px" showCollapseButton="true">
                <!----权限列表--->
                        <!----权限列表--->
                <div class="mini-panel" title="门禁权限管理" style="width:100%;height:100%;" showToolbar="true">
                    <!--toolbar-->
                    <div property="toolbar">
                        <input type="button" value="新建" onclick="onAddAccess()" style='vertical-align:middle;'/>   
                        <input type="button" value="编辑" onclick="onEditAccess()" style='vertical-align:middle;'/>
                        <input type="button" value="删除" onclick="onRemoveAccess()" style='vertical-align:middle;'/>
                    </div>                  
                    <!--body-->
                       <ul id="accessList" class="mini-tree" url="LoadAccessList" style="width:inherit;padding:3px;" 
                            showTreeIcon="true" textField="text" idField="id" parentField="pid" resultAsTree="false" onEndEdit="afterEditAccess()" onNodeClick="selectAccess()" >
                        </ul>
                </div>
            </div>
            <!----设备信息栏--->
            <div showCollapseButton="true">
                <div id="AccessDetail" class="mini-panel" style="width:100%;height:100%;" showHeader="false">
                </div>
            </div>        
        </div>


</div>
    <script type="text/javascript">
        var TREE_ID = 'accessList';

        function onAddAccess(e) {
            var tree = mini.get(TREE_ID);
            var node = tree.getSelectedNode();
            var name = "未命名";
            $.ajax({
                url: "../AccessManage/AddAccess",
                type: 'post',
                data: { data: name },
                cache: false,
                success: function (text) {

                    if (text == "Success") {
                        //通过Ajax获得一个新的Access节点内容
                        //方法：NewAccess
                        var newNode = { text: name };

                        tree.addNode(newNode, "after", node);
                    }
                    else {
                        alert(text);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseText);
                }
            });
            
        }

        function onEditAccess(e) {
            var tree = mini.get(TREE_ID);
            var node = tree.getSelectedNode();
            if (node) {
                tree.beginEdit(node);
            }
            else {
                alert("请选中一个节点");
            }
            
        }

        function afterEditAccess() {       
            var tree = mini.get(TREE_ID);
            var node = tree.getSelectedNode();
            //通过Ajax改变节点名称
            //方法：EditAccessName
            var json = mini.encode(node);
            $.ajax({
                url: "../AccessManage/EditAccess",
                type: 'post',
                data: { data: json },
                cache: false,
                success: function (text) {

                    if (text == "Success") {

                    }
                    else {
                        alert(text);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseText);
                }
            });
        }

        function onRemoveAccess(e) {
            var tree = mini.get(TREE_ID);
            var node = tree.getSelectedNode();
            var value = tree.getValue();
            if (node) {
                if (confirm("确定删除选中门禁权限?")) {
                    //通过Ajax删除节点
                    //方法：removeAccess
                    var json = mini.encode(node);
                    $.ajax({
                        url: "../AccessManage/DeleteAccess",
                        type: 'post',
                        data: { data: value },
                        cache: false,
                        success: function (text) {

                            if (text == "Success") {
                                tree.removeNode(node);
                            }
                            else {
                                alert(text);
                            }
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            alert(jqXHR.responseText);
                        }
                    });
                }
            }
            else {
                alert("请选中一个节点");
            }
        }

        ///选中权限,加载权限明细页面
        function selectAccess() {
            var tree = mini.get(TREE_ID);
            var node = tree.getSelectedNode();
            var detail = mini.get("AccessDetail");
            //实现方法AccessDetail?AccessId=
            detail.load("AccessDetail?AccessID=" + node.id);
        }
        
    </script>
        
    </body>
</html>