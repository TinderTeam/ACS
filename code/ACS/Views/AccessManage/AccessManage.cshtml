<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>门禁权限管理</title>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
        <link href="../../script/demo.css" rel="stylesheet" type="text/css" />
        <script src="../../Scripts/boot.js" type="text/javascript"></script>
 <style>
     .my-label
     {
         padding-left: 1px;
         width: 200px;
         text-align:right;
     }
      .my-result
     {
         padding-left: 1px;
         width: 200px;
         text-align:left;
     }

     </style>
    </head>
<body> 
<style type="text/css">
    html, body{
        margin:0;padding:0;border:0;width:100%;height:100%;overflow:hidden;
    }    
</style>

<div class="mini-fit" >
<!----设备信息栏--->
        <div id="AccessDetail" class="mini-panel" title="门禁权限编辑" style="width: 100%; height: 100%;" showtoolbar="true">
            <div class="mini-toolbar" style="border-bottom: 0; padding: 0px;">
                <table style="width: 100%;">
                    <tr>
                        <td style="width: 100%;">
                            <a class="mini-button" iconcls="icon-add" onclick="onAccessCreate('Add')">新建权限</a>
                            <a class="mini-button" iconcls="icon-edit" onclick="onAccessCreate('Edit')">编辑名称</a>
                            <a class="mini-button" iconcls="icon-add" onclick="addAccessOfAccess()">编辑权限</a>
                            <a class="mini-button" iconcls="icon-remove" onclick="onRemoveAccess()">删除</a>
                        </td>
                    </tr>
                </table>
            </div>

            <div id="treegrid" class="mini-treegrid" style="width: 100%; height: 95%;" url="../AccessManage/LoadAllAccessDetail"
                showTreeIcon="true" treeColumn="taskname" idField="Id" parentField="Pid" 
                resultAsTree="false" allowResize="true" >
                <div property="columns">
                    <div type="indexcolumn"></div>
                    <div name="taskname" field="Text" width="120" headeralign="center" allowsort="true">权限名称</div>
                    <div field="" width="120" headeralign="center" allowsort="true">序号</div>
                    <div field="Type" width="120" headeralign="center" allowsort="true">类型</div>
                    <div header="门禁时间" headeralign="center">
                        <div property="columns" >
                            <div field="CreateUserID" width="120" headeralign="center" allowsort="true">控制器名称</div>
                            <div field="CreateDate" width="120" headeralign="center" allowsort="true">门名称</div>
                            <div field="CreateDate" width="120" headeralign="center" allowsort="true">时间段编号</div>
                            <div field="StartTime" width="120" headeralign="center" allowsort="true">开始时间</div>
                            <div field="EndTime" width="120" headeralign="center" allowsort="true">截止时间</div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>      


</div>
    <script type="text/javascript">
        var TREE_ID = 'accessList';

        function onAccessCreate(type) {
            var tree = mini.get("#treegrid");
            var node = tree.getSelectedNode();
            var accessID;
            if ((type == "Add") || ((node) && (node.Pid == "0"))) {
                if (type == "Edit") {
                    var titleName = "编辑名称";
                    accessID = node.ValueID;
                }
                else if (type == "Add") {
                    var titleName = "新增权限";
                    accessID = 0;
                }
                mini.open({
                    url: "../AccessManage/AccessCreate",
                    title: titleName, width: 350, height: 350,
                    onload: function () {
                        var iframe = this.getIFrameEl();
                        var data = { action: type, id: accessID };
                        iframe.contentWindow.Show(data);

                    },
                    ondestroy: function (action) {

                        if (action == "ok")     //关闭窗口时点击的是确定
                        {
                            tree.load("../AccessManage/LoadAllAccessDetail");
                        }


                    }
                });
            }
            else {
                alert("请选中一个根节点");
           }
        }
        //为选中的门禁权限增加权限
        function addAccessOfAccess() {
            var tree = mini.get("#treegrid");
            var node = tree.getSelectedNode();
            if ((node)&&(node.Pid == "0")) {
                mini.open({
                    url: "../AccessManage/AccessEdit",
                    title: "新增权限", width: 1024, height: 600,
                    onload: function () {
                        var iframe = this.getIFrameEl();
                        var data = { id: node.ValueID };
                        iframe.contentWindow.Show(data);

                    },
                    ondestroy: function (action) {
                        //grid.reload();
                        tree.load("../AccessManage/LoadAllAccessDetail");
                    }
                });
            }
            else {
                alert("请选中一个根节点");
            }
        }
        //删除权限
        function onRemoveAccess(e) {
            var tree = mini.get("#treegrid");
            var node = tree.getSelectedNode();
            var json = mini.encode(node);
            if (node) {
                if ((node._level == 0) || ((node._level == 1) && (node.Type == "ACCESS")) || ((node._level == 3) && (node.Type == "DOORTIME"))) {
                    if (confirm("确定删除选中门禁权限?")) {
                        //通过Ajax删除节点
                        //方法：removeAccess
                        $.ajax({
                            url: "../AccessManage/DeleteAccess",
                            type: 'post',
                            data: { data: json },
                            cache: false,
                            success: function (text) {

                                if (text == "Success") {
                                    //tree.removeNode(node);
                                    tree.load("../AccessManage/LoadAllAccessDetail");
                                }
                                else {
                                    alert(text);
                                }
                            },
                            error: function (jqXHR, textStatus, errorThrown) {
                                alert(jqXHR.responseText);
                            }
                        });
                    }
                }
                else {
                    alert("请选择根权限直接包含的权限或时间段")
                }
            }
            else {
                alert("请选中一个节点");
            }
        }
        
    </script>
        
    </body>
</html>