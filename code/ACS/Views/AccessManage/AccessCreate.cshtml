<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>员工面板</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    
    <script src="../../Scripts/boot.js" type="text/javascript"></script>

    <style type="text/css">
    html, body
    {
        font-size:12px;
        padding:0;
        margin:0;
        border:0;
        height:100%;
        overflow:hidden;
    }
    </style>
</head>
<body> 
    <form id="accessForm" method="post">
        
            <div style="margin-top:20px;margin-bottom:20px;margin-left:70px;">
                <table style="table-layout:fixed;">
                <tr style ="height:35px">
                    <td style="width:90px;">权限名称：</td>
                    <td style="width:150px;">
                        <input name="AccessName" class="mini-textbox"  value=""/>
                    </td>
                    
                </tr>
                <tr style ="height:35px">
                    <td >权限ID：</td>
                    <td >    
                        <input name="ValueID" class="mini-textbox" readonly="readonly" value=""/>
                    </td>
                </tr>         
            </table>
            </div>    

                  
        <div style="text-align:center;padding:5px;">
            <a id="AddAccess" class="mini-button"  onclick="onAddOk" style="width:60px;margin-right:20px;">确定</a>               
            <a id="EditAccess" class="mini-button" onclick="onEditOk" style="width:60px;margin-right:20px;">确定</a>       
            <a class="mini-button" onclick="onCancel" style="width:60px;">取消</a>       
        </div>  
    </form>
    <script type="text/javascript">
        mini.parse();

        var form = new mini.Form("#accessForm");

        ////////////////////
        //加载窗口信息
        function Show(data) {
            //跨页面传递的数据对象，克隆后才可以安全使用
            receiveData = mini.clone(data);
            if (receiveData.action == "Edit") {
                var showUrl = "../AccessManage/ShowEditAccessName?accessID=" + data.id;
                $("#AddAccess").attr('style', 'display:none');
            }
            else if (receiveData.action == "Add") {
                //数据库中不存在valueID="0"的权限，这样就不会查到任何信息
                var showUrl = "../AccessManage/ShowEditAccessName?accessID=" + "ACCESS_0";
                $("#EditAccess").attr('style', 'display:none');
            }
            else
            {
            }
            $.ajax({
                url: showUrl,
                cache: false,
                success: function (text) {
                    var accessDetailObj = mini.decode(text);
                    form.setData(accessDetailObj);
                }
            });
        }
        //新建权限
        function onAddOk() {
            var accessObj = form.getData();
            form.validate();
            if (form.isValid() == false) return;
            var json = null;
            $.ajax({
                url: "../AccessManage/CreateAccess?accessName=" + accessObj.AccessName,
                type: 'post',
                data: { data: json },
                cache: false,
                success: function (text) {

                    if (text == "Success") {
                        CloseWindow("ok");
                    }
                    else {
                        alert(text);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseText);
                    CloseWindow();
                }
            });
        }
        //编辑权限
        function onEditOk() {
            var o = form.getData();
            form.validate();
            if (form.isValid() == false) return;
            var json = mini.encode(o);
            $.ajax({
                url: "../AccessManage/EditAccessName",
                type: 'post',
                data: { data: json },
                cache: false,
                success: function (text) {

                    if (text == "Success") {
                        CloseWindow("ok");
                    }
                    else {
                        alert(text);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseText);
                    CloseWindow();
                }
            });
        }
        function GetData() {
            var o = form.getData();
            return o;
        }
        function CloseWindow(action) {
            if (action == "close" && form.isChanged()) {
                if (confirm("数据被修改了，是否先保存？")) {
                    return false;
                }
            }
            if (window.CloseOwnerWindow) return window.CloseOwnerWindow(action);
            else window.close();
        }
        function onCancel(e) {
            CloseWindow("cancel");
        }
    </script>
</body>
</html>