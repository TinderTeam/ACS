<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>员工面板</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    
    <script src="../../Scripts/boot.js" type="text/javascript"></script>

    <style type="text/css">
    html, body
    {
        font-size:12px;
        padding:0;
        margin:0;
        border:0;
        height:100%;
        overflow:hidden;
    }
    </style>
</head>
<body> 
    <form id="holidayForm" method="post">
        
        @if (@ViewBag.Type == "CREATE")
        {
            <div style="margin-top:20px;margin-bottom:20px;margin-left:70px;">
                <table style="table-layout:fixed;">
                    <tr style ="height:35px">
                        <td style="width:60px;">@Resources.Label_Resource.ResourceManager.GetString("HolidayEdit_HolidayName")</td>
                        <td style="width:150px;">
                            <input name="HolidayName" class="mini-textbox" required="true"/>
                        </td>
                        
                    </tr>
                    <tr style ="height:35px">
                        <td >@Resources.Label_Resource.ResourceManager.GetString("HolidayEdit_StartTime")</td>
                        <td >    
                            <input name="StartTime" class="mini-datepicker" required="true"/>
                        </td>
                    </tr>
                    <tr style ="height:35px">
                        
                        <td >@Resources.Label_Resource.ResourceManager.GetString("HolidayEdit_EndTime")</td>
                        <td >    
                            <input name="EndTime" class="mini-datepicker" required="true"/>
                        </td>
                    </tr>
                    <tr style ="height:35px">
                        <td >@Resources.Label_Resource.ResourceManager.GetString("HolidayEdit_HolidayNote")</td>
                        <td >    
                            <input name="HolidayNote" class="mini-textbox"/>
                        </td>
                    </tr>        
                </table>
            </div>
        }
        else
        {
            <div style="margin-top:20px;margin-bottom:20px;margin-left:70px;">
                <table style="table-layout:fixed;">
                    <tr style ="height:35px">
                        <td style="width:60px;">@Resources.Label_Resource.ResourceManager.GetString("HolidayEdit_HolidayName")</td>
                        <td style="width:150px;">
                            <input name="HolidayName" class="mini-textbox" required="true"/>
                        </td>
                        
                    </tr>
                    <tr style ="height:35px">
                        <td >@Resources.Label_Resource.ResourceManager.GetString("HolidayEdit_StartTime")</td>
                        <td >    
                            <input name="StartTime" class="mini-datepicker" required="true"/>
                        </td>
                    </tr>
                    <tr style ="height:35px">
                        
                        <td >@Resources.Label_Resource.ResourceManager.GetString("HolidayEdit_EndTime")</td>
                        <td >    
                            <input name="EndTime" class="mini-datepicker" required="true"/>
                        </td>
                    </tr>
                    <tr style ="height:35px">
                        <td >@Resources.Label_Resource.ResourceManager.GetString("HolidayEdit_HolidayNote")</td>
                        <td >    
                            <input name="HolidayNote" class="mini-textbox"/>
                        </td>
                    </tr>        
                </table>
            </div>    
        }        
        <div style="text-align:center;padding:5px;">               
            <a class="mini-button" onclick="onOk" style="width:60px;margin-right:20px;">确定</a>       
            <a class="mini-button" onclick="onCancel" style="width:60px;">取消</a>       
        </div>
        <input class="submit-type" style="display:none" value="@ViewBag.Type"/>     
    </form>
    <script type="text/javascript">
        mini.parse();

        var form = new mini.Form("#holidayForm");

        function SaveData() {
            var o = form.getData();
            form.validate();
            if (form.isValid() == false) return;

            //获取操作类型（新建/修改）
            var type = $(".submit-type").val();
            var url;
            if (type == 'CREATE') {
                //新建
                url = "/HolidayManage/Create";
            }
            else if (type == 'EDIT') {
                //编辑
                url = "/EmployeeManage/Edit";
            }
            var json = mini.encode(o);
            $.ajax({
                url: url,
                type: 'post',
                data: { data: json },
                cache: false,
                success: function (text) {

                    if (text == "Success") {
                        mini.alert("修改成功！");
                        CloseWindow("save");
                    }
                    else {
                        alert(text);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseText);
                    CloseWindow();
                }
            });
        }
        function GetData() {
            var o = form.getData();
            return o;
        }
        function CloseWindow(action) {
            if (action == "close" && form.isChanged()) {
                if (confirm("数据被修改了，是否先保存？")) {
                    return false;
                }
            }
            if (window.CloseOwnerWindow) return window.CloseOwnerWindow(action);
            else window.close();
        }
        function onOk(e) {
            SaveData();
        }
        function onCancel(e) {
            CloseWindow("cancel");
        }
    </script>
</body>
</html>