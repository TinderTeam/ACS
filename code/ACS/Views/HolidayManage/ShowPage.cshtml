<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>员工面板</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    
    <script src="../../Scripts/boot.js" type="text/javascript"></script>

    <style type="text/css">
    html, body
    {
        font-size:12px;
        padding:0;
        margin:0;
        border:0;
        height:100%;
        overflow:hidden;
    }
    </style>
</head>
<body> 
    <form id="holidayForm" method="post">
        
            <div style="margin-top:20px;margin-bottom:20px;margin-left:70px;">
                <table style="table-layout:fixed;">
                    <tr style ="height:35px">
                        <td style="width:60px;">@Resources.Label_Resource.ResourceManager.GetString("HolidayEdit_HolidayName")</td>
                        <td style="width:150px;">
                            <input name ="HolidayID" class="mini-textbox" style="display:none" value=""/>
                            <input name="HolidayName" class="mini-textbox" required="true" value=""/>
                        </td>
                        
                    </tr>
                    <tr style ="height:35px">
                        <td >@Resources.Label_Resource.ResourceManager.GetString("HolidayEdit_StartTime")</td>
                        <td >    
                            <input name="StartTime" class="mini-datepicker" required="true" value=""/>
                        </td>
                    </tr>
                    <tr style ="height:35px">
                        
                        <td >@Resources.Label_Resource.ResourceManager.GetString("HolidayEdit_EndTime")</td>
                        <td >    
                            <input name="EndTime" class="mini-datepicker" required="true" value=""/>
                        </td>
                    </tr>
                    <tr style ="height:35px">
                        <td >@Resources.Label_Resource.ResourceManager.GetString("HolidayEdit_HolidayNote")</td>
                        <td >    
                            <input name="HolidayNote" class="mini-textbox" value=""/>
                        </td>
                    </tr>        
                </table>
            </div>
       
        <div style="text-align:center;padding:5px;">
            <a id="CreateHoliday" class="mini-button"  onclick="onSaveData('Create')" style="display:none">确定</a>               
            <a id="ModifyHoliday" class="mini-button" onclick="onSaveData('Modify')" style="display:none">确定</a>                    
            <a class="mini-button" onclick="CloseWindow('cancel')" style="width:60px;">取消</a>       
        </div>    
    </form>
    <script type="text/javascript">
        mini.parse();

        var form = new mini.Form("#holidayForm");

        ////////////////////
        //加载窗口信息
        function Show(data) {
            //跨页面传递的数据对象，克隆后才可以安全使用
            receiveData = mini.clone(data);
            if (receiveData.action == "Modify") {

                $("#ModifyHoliday").attr('style', 'width:60px;margin-right:20px;');
            }
            else if (receiveData.action == "Create") {

                $("#CreateHoliday").attr('style', 'width:60px;margin-right:20px;');
            }
            else {
            }
            $.ajax({
                url: "../HolidayManage/Show?data="+data.id,
                cache: false,
                success: function (json) {
                    var Rsp = mini.decode(json);
                    if (Rsp.ErrorCode == "Success") {
                        form.setData(Rsp.Obj);
                    } else {
                        mini.alert(Rsp.Message);
                    }
                                        
                },
                error: function (jqXHR, textStatus, errorThrown) {
                alert(jqXHR.responseText);
                CloseWindow();
                }
            });
        }

        function onSaveData(type) {
            var data = form.getData();
            var json = mini.encode(data);
            //获取操作类型（新建/修改）
            var url;
            if (type == 'Create') {
                //新建
                url = "/HolidayManage/Create";
            }
            else if (type == 'Modify') {
                //编辑
                url = "/HolidayManage/Modify";
            }
            
            $.ajax({
                url: url,
                type: 'post',
                data: { data: json },
                cache: false,
                success: function (json) {

                    var Rsp = mini.decode(json);
                    if (Rsp.ErrorCode == "Success") {
                        CloseWindow("save");
                    } else {

                        mini.alert(Rsp.Message);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseText);
                    CloseWindow();
                }
            });
        }

        function CloseWindow(action) {
            if (action == "close" && form.isChanged()) {
                if (confirm("数据被修改了，是否先保存？")) {
                    return false;
                }
            }
            if (window.CloseOwnerWindow) return window.CloseOwnerWindow(action);
            else window.close();
        }
    </script>
</body>
</html>