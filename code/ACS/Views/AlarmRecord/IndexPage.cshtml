<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>员工管理</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <link href="../../Scripts/demo.css" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/boot.js" type="text/javascript"></script>
</head>
<body>
<style type="text/css">
    html, body{
        margin:0;padding:0;border:0;width:100%;height:100%;overflow:hidden;
    }    
</style>   
    <fieldset style="width:96%;border:solid 1px #aaa;margin-top:8px;position:relative;">
        <legend>@Resources.Label_Resource.ResourceManager.GetString("AlarmRecord_AlarmRecordSearch")</legend>
        <div id="editForm1" style="padding:5px;">
            <input class="mini-hidden" name="id"/>
            <form id="searchForm" method="post">
                <table style="width:100%;">
                    <tr>
                        <td style="width:60px;">@Resources.Label_Resource.ResourceManager.GetString("AlarmRecord_AlarmTypeSearch")</td>
                        <td style="width:130px;">
                            <input name="EventTypeID" class="mini-combobox" valueField="EventTypeID" textField="EventTypeName" 
                                url="../AlarmRecord/LoadEventTypeList"/>
                        </td>
                        <td style="width:20px;">@Resources.Label_Resource.ResourceManager.GetString("AlarmRecord_DoorSearch")</td>
                        <td style="width:130px;"><input name="DoorName" class="mini-textbox"></td>
                        <td style="width:40px;">@Resources.Label_Resource.ResourceManager.GetString("AlarmRecord_TimeSearch")</td>
                        <td style="width:130px;">
                            <input name="AlarmTimeStart" class="mini-datepicker" format="yyyy-MM-dd HH:mm:ss" timeFormat="HH:mm:ss" 
                                showTime="true" showOkButton="true" showTodayButton="false"/>-
                        </td>
                        <td style="width:130px;">
                            -<input name="AlarmTimeEnd" class="mini-datepicker" format="yyyy-MM-dd HH:mm:ss" timeFormat="HH:mm:ss" 
                                showTime="true" showOkButton="true" showTodayButton="false"/>
                        </td>
                        <td style="width:130px;">
                            <a class="mini-button " iconCls="icon-search" onclick="search()">@Resources.Label_Resource.ResourceManager.GetString("AlarmRecord_Search")</a>
                        </td>  
                    </tr>
                </table>
            </form>
        </div>
    </fieldset>
<div class="mini-fit" >
    <div id ="datagrid1" class="mini-datagrid" style="width:100%;height:100%;" allowResize="true"
        url="Load"  idField="AlarmID" multiSelect="true">
        <div property="columns">
            <!--<div type="indexcolumn"></div>        -->
            <div type="indexcolumn" width="15px"></div>
            <div name="ForegroundColorColumn" field="ForegroundColor" width="70" headerAlign="center" allowSort="true"></div>    
            <div name="BackgroundColorColumn" field="BackgroundColor" width="70" headerAlign="center" allowSort="true"></div>
            <div field="EventTypeName" width="70px" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("AlarmRecord_AlarmType")</div>                       
            <div field="AlarmTime" width="140px" headerAlign="center" allowSort="true" dateFormat="yyyy-MM-dd HH:mm:ss">@Resources.Label_Resource.ResourceManager.GetString("AlarmRecord_AlarmTime")</div>    
            <div field="DoorName" width="70px" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("AlarmRecord_DoorID")</div>    
            <div field="ControlName" width="70px" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("AlarmRecord_ControlID")</div>
                    
        </div>
    </div> 
</div>
    <script type="text/javascript">
        mini.parse();
        var grid = mini.get("#datagrid1");
        grid.load();
        grid.hideColumn("ForegroundColorColumn");
        grid.hideColumn("BackgroundColorColumn");
        //grid.sortBy("createtime", "desc");
        //根据事件类型标记颜色
        grid.on("drawcell", function (e) {
            var record = e.record;
            //给帐号列，增加背景色
            if (e.field == "EventTypeName") {
                e.cellStyle = "background:" + record.BackgroundColor + ";color:" + record.ForegroundColor;
            }

        });
        //
        function search() {

            var form = new mini.Form("#searchForm");
            var searchData = form.getData();
            var json = mini.encode(searchData);
            grid.load({ data: json });

        }
        $("#key").bind("keydown", function (e) {

            if (e.keyCode == 13) {
                return false;

            }
        });
    </script>
</body>
</html>