<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>员工面板</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    
    <script src="../../Scripts/boot.js" type="text/javascript"></script>

    <style type="text/css">
    html, body
    {
        font-size:12px;
        padding:0;
        margin:0;
        border:0;
        height:100%;
        overflow:hidden;
    }
    </style>
</head>
<body> 
    <form id="userForm" method="post">
        <div style="padding-left:25px;margin-top:10px;">
            @if(@ViewBag.Type == "CREATE")
            {
                <table style="table-layout:fixed;">
                    <tr style ="height:35px">
                        <td style="width:90px;">用户名称：</td>
                        <td style="width:150px;">
                            <input name="UserName" class="mini-textbox" required="true"  emptyText="请输入用户名"/>
                        </td>
                        <td style="width:90px;">备注：</td>
                        <td style="width:150px;">    
                            <input name="UserDesc" class="mini-textbox"/>
                        </td>
                    </tr>
                
                    <tr style ="height:35px">
                        <td >输入密码：</td>
                        <td >    
                            <input name="Pswd" class="mini-password" required="true"/>
                        </td>
                        <td >再次输入密码：</td>
                        <td >    
                            <input name="RePswd" class="mini-password" required="true"/>
                        </td>
                    </tr>        
                </table>
            }
            else
            {
                <table style="table-layout:fixed;">
                <tr style ="height:35px">
                    <td style="width:90px;">用户名称：</td>
                    <td style="width:150px;">
                        <input class="mini-textbox" readonly="readonly" emptyText="请输入用户名" value="@ViewBag.user.UserName"/>
                    </td>
                    <td style="width:90px;">备注：</td>
                    <td>    
                        <input name="UserDesc" style="width:160px;" class="mini-textbox" value="@ViewBag.user.UserDesc"/>
                    </td>
                </tr>
                
                <tr style ="height:35px">
                    <td >创建者ID：</td>
                    <td >    
                        <input name="CreateUserID" class="mini-textbox" readonly="readonly" value="@ViewBag.user.CreateUserID"/>
                    </td>
                    <td >创建时间：</td>
                    <td >    
                        <input name ="CreateDate" class="mini-textbox" style="width:160px;" readonly="readonly" value="@ViewBag.user.CreateDate"/>
                        <input name ="UserID" class="mini-textbox" style="display:none" value="@ViewBag.user.UserID"/>
                    </td>
                </tr>
                <tr style ="height:35px">
                    <td >最后编辑者ID：</td>
                    <td >    
                        <input class="mini-textbox" readonly="readonly" value="@ViewBag.user.ModifyUserID"/>
                    </td>
                    <td >最后编辑时间：</td>
                    <td >    
                        <input name ="ModifyDate" class="mini-textbox" style="width:160px;" readonly="readonly" value="@ViewBag.user.ModifyDate"/>
                    </td>
                </tr>         
            </table>    
            }

        </div>          
        <div style="text-align:center;padding:5px;">               
            <a class="mini-button" onclick="onOk" style="width:60px;margin-right:20px;">确定</a>       
            <a class="mini-button" onclick="onCancel" style="width:60px;">取消</a>       
        </div>
        <input class="submit-type" style="display:none" value="@ViewBag.Type"/>     
    </form>
    <script type="text/javascript">
        mini.parse();

        var form = new mini.Form("#userForm");

        function SaveData() {
            var o = form.getData();
            form.validate();
            if (form.isValid() == false) return;

            //获取操作类型（新建/修改）
            var type = $(".submit-type").val();
            var url;
            if (type == 'CREATE') {
                //新建
                url = "/UserManage/Create";
            }
            else if (type == 'EDIT') {
                //编辑
                url = "/UserManage/Edit?id=@ViewBag.ID";
            }
            var json = mini.encode(o);
            $.ajax({
                url: url,
                type: 'post',
                data: { data: json },
                cache: false,
                success: function (text) {

                    if (text == "Success") {
                        mini.alert("修改成功！");
                        CloseWindow("save");
                    }
                    else {
                        alert(text);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseText);
                    CloseWindow();
                }
            });
        }
        function GetData() {
            var o = form.getData();
            return o;
        }
        function CloseWindow(action) {
            if (action == "close" && form.isChanged()) {
                if (confirm("数据被修改了，是否先保存？")) {
                    return false;
                }
            }
            if (window.CloseOwnerWindow) return window.CloseOwnerWindow(action);
            else window.close();
        }
        function onOk(e) {
            SaveData();
        }
        function onCancel(e) {
            CloseWindow("cancel");
        }
    </script>
</body>
</html>