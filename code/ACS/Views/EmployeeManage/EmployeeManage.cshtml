    <script type="text/javascript">
        mini.parse();
        var grid = mini.get("#datagrid1");
        grid.load();
        //grid.sortBy("createtime", "desc");

        function add() {
            mini.open({
                url:"../EmployeeManage/EmployeeCreate",
                title: "新增员工", width: 560, height: 500,
                onload: function () {

                },
                ondestroy: function (action) {           
                    grid.reload();
                }
            });
        }

        function edit() {
         
            var row = grid.getSelected();
            if (row) {
                var id = row.EmployeeID;
                mini.open({
                    url: "../EmployeeManage/EmployeeEdit?id=" + id,
                    title: "编辑员工", width: 560, height: 500,
                    onload: function () {
                      
                    },
                    ondestroy: function (action) {
                        grid.reload();
                        
                    }
                });             
            } else {
                alert("请选中一条记录");
            }
            
        }

        function remove() {
            
            var rows = grid.getSelecteds();

            if (rows.length > 0) {
                if (confirm("确定删除选中记录？")) {
           
                    var ids = [];
                    for (var i = 0, l = rows.length; i < l; i++) {
                        var r = rows[i];
                        ids.push(r.EmployeeID);
                    }
                    var id = ids.join(',');
                    grid.loading("操作中，请稍后......");
                    $.ajax({
                        url: "../EmployeeManage/Remove?idstr="+id,
                        success: function (text) {                        
                            grid.reload();
                        },
                        error: function () {
                        }
                    });
                }
            } else {
                alert("请选中一条记录");
            }
        }

        function search() {
            var key = mini.get("key").getValue();
            grid.load({ key: key });
        }
        function onKeyEnter(e) {
            search();
        }
        /////////////////////////////////////////////////
        function onBirthdayRenderer(e) {
            var value = e.value;
            if (value) return mini.formatDate(value, 'yyyy-MM-dd');
            return "";
        }
        function onMarriedRenderer(e) {
            if (e.value == 1) return "是";
            else return "否";
        }
        var Genders = [{ id: 1, text: '男' }, { id: 2, text: '女'}];        
        function onGenderRenderer(e) {
            for (var i = 0, l = Genders.length; i < l; i++) {
                var g = Genders[i];
                if (g.id == e.value) return g.text;
            }
            return "";
        }
    </script>
