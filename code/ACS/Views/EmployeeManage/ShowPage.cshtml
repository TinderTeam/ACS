<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>员工面板</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <script src="../../Scripts/miniui/swfupload/swfupload.js" type="text/javascript"></script>
    <script src="../../Scripts/boot.js" type="text/javascript"></script>

    <style type="text/css">
    html, body
    {
        font-size:12px;
        padding:0;
        margin:0;
        border:0;
        height:100%;
        overflow:hidden;
    }
    </style>
</head>
<body> 
    <form id="employeeForm" method="post" enctype="multipart/form-data" >
        <div class="mini-fit" >
            <div class="mini-layout" style="width:100%;height:100%">
                <!--上部--->
                <div showHeader="false"  region="north" height="260" >
                    <div class="mini-layout" showHeader="false" style="width:100%;">
                        <!--个人信息--->
                        <div region="center"  showHeader="false" >
                            <table border="0" cellpadding="1" cellspacing="2" style="padding:10px">
                                <tr>
                                    <td style="width:70px;">@Resources.EmployeeManage_Resource.ResourceManager.GetString("EmployeeName")</td>
                                    <td style="width:150px;">    
                                        <input name="EmployeeName" class="mini-textbox" vtype="maxLength:50" required="true"/>
                                        <input name ="EmployeeID" class="mini-textbox" style="display:none" value=""/>
                                    </td>
                                </tr>                  
                                <tr>
                                    <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("EnglishName")</td>
                                    <td >    
                                        <input name="EnglishName" class="mini-textbox" vtype="maxLength:50"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("Sex")</td>
                                    <td >    
                                        <select name="Sex" class="mini-radiobuttonlist">
                                            <option value="true">@Resources.Common_Resource.ResourceManager.GetString("Male")</option>
                                            <option value="false">@Resources.Common_Resource.ResourceManager.GetString("Female")</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("Birthday")</td>
                                    <td >
                                        <input name="Birthday" class="mini-datepicker" emptyText="@Resources.Common_Resource.ResourceManager.GetString("PleaseSelectDate")" required="true"/>    
                                    </td>
                                </tr>
                                <tr>
                                    <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("Phone")</td>
                                        <td >    
                                            <input name="Phone" class="mini-textbox" vtype="maxLength:20"/>
                                        </td>    
                                </tr>
                                <tr>
                                    <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("PersonCode")</td>
                                        <td >    
                                            <input name="PersonCode" class="mini-textbox" vtype="maxLength:20"/>
                                        </td>
                                </tr>
                                <tr>
                                    <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("Home")</td>
                                    <td >    
                                        <input name="Home" class="mini-textbox" vtype="maxLength:60"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("Car")</td>
                                        <td >    
                                            <input name ="Car" class ="mini-textbox" vtype="maxLength:20"/>
                                        </td>
                                </tr>
                            </table>
                        </div>
                        <!--右边照片-->
                        <div region="east" showHeader="false" width="300" style="padding:10px">
                            <div style="float:right;width:100%;height:100%" class="mini-tabs" activeIndex="0" >
                                <div title="@Resources.EmployeeManage_Resource.ResourceManager.GetString("Photo1")" >
				                        <div style="text-align:center;margin:15px auto;">
                                            <img id="ImgPr1" src="" height="120" width="170" alt="@Resources.EmployeeManage_Resource.ResourceManager.GetString("PersonPhoto")" >
				                        </div>
                                         <div style="text-align:center;margin:0 auto;">
                                            <input id="employeePhoto1"  name ="Photo1" class ="mini-textbox" style="display:none"/>
				                            <input id="fileupload1" class="mini-fileupload" name="Fdata" flashUrl="../../Scripts/miniui/swfupload/swfupload.swf"
                                                    uploadUrl="UploadPhoto?num=1" onuploadsuccess="onUploadSuccess" onuploaderror="onUploadError" onfileselect="onFileSelect"
                                            />
                                            <input type="button" value="@Resources.EmployeeManage_Resource.ResourceManager.GetString("Upload")" onclick="startUpload('1')"/>
				                        </div>
                                   
                                </div>
                                <div title="@Resources.EmployeeManage_Resource.ResourceManager.GetString("Photo2")">
                                    <div style="text-align:center;margin:15px auto;">
				                        <img id="ImgPr2" src="" height="120" width="170" alt="@Resources.EmployeeManage_Resource.ResourceManager.GetString("PersonPhoto")" >
                                    </div>
                                    <div style="text-align:center;margin:0 auto;">
                                        <input id="employeePhoto2"  name ="Photo2" class ="mini-textbox" style="display:none"/>
				                        <input id="fileupload2" class="mini-fileupload" name="Fdata" flashUrl="../../Scripts/miniui/swfupload/swfupload.swf"
                                                uploadUrl="UploadPhoto?num=2"; onuploadsuccess="onUploadSuccess" onuploaderror="onUploadError" onfileselect="onFileSelect"
                                        />
                                        <input type="button" value="@Resources.EmployeeManage_Resource.ResourceManager.GetString("Upload")" onclick="startUpload('2')"/>
			                        </div>
                                </div>
                            </div>    
                        </div> <!--右边照片-->
                     </div>
                </div>
                <!--下部--->
                <fieldset style="border:solid 1px #aaa;padding:3px;" region="center">
                    <legend >@Resources.EmployeeManage_Resource.ResourceManager.GetString("WorkInfo")</legend>
                    <div style="padding-left:25px;margin-top:10px;margin-bottom:10px;">
                        <table>
                            <tr >
                                <td style="width:70px;">@Resources.EmployeeManage_Resource.ResourceManager.GetString("EmployeeCode")</td>
                                <td style="width:150px;">
                                    <input name="EmployeeCode" class="mini-textbox" vtype="maxLength:24" required="true"/>
                                
                                </td>
                                <td style="width:70px;">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Email")</td>
                                <td style="width:150px;">    
                                    <input name="Email" class="mini-textbox" vtype="email;rangeLength:5,20;"/>
                                </td>
                            </tr>
                            <tr>
                                <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("Dept")</td>
                                <td >    
                                    <input name="DeptID" class="mini-combobox" valueField="DeptID" textField="DeptName" 
                                    url="../DeptManage/LoadTree" onvaluechanged="onDeptChanged" required="true"
                                    emptyText="@Resources.Common_Resource.ResourceManager.GetString("PleaseSelect")"
                                    />
                                </td>
                                <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("Job")</td>
                                <td >
                                    <input name="JobID" class="mini-combobox" valueField="JobID" textField="JobName"
                                    url="../JobManage/LoadTree" required="true" emptyText="@Resources.Common_Resource.ResourceManager.GetString("PleaseSelect")"
                                    />
                                </td> 
                            </tr>
                            <tr>
                                <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("RegDate")</td>
                                <td >
                                    <input name="RegDate" class="mini-datepicker" required="true" emptyText="@Resources.Common_Resource.ResourceManager.GetString("PleaseSelectDate")"/>     
                                </td>
                                <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("EndDate")</td>
                                <td >
                                    <input name="EndDate" class="mini-datepicker" required="true" emptyText="@Resources.Common_Resource.ResourceManager.GetString("PleaseSelectDate")"/>
                                </td>
                            </tr>
                            <tr>
                                <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("Note1")</td>
                                <td >    
                                    <input name="Note1" class="mini-textbox" vtype="maxLength:50"/>
                                </td>
                                <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("Note2")</td>
                                <td >    
                                    <input name="Note2" class="mini-textbox" vtype="maxLength:50"/>
                                </td>
                            </tr>
                            <tr>
                                <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("Note3")</td>
                                <td >    
                                    <input name="Note3" class="mini-textbox" vtype="maxLength:50"/>
                                </td>
                                <td >@Resources.EmployeeManage_Resource.ResourceManager.GetString("Note4")</td>
                                <td >    
                                    <input name="Note4" class="mini-textbox" vtype="maxLength:50"/>
                                </td>
                            </tr>
                        </table>            
                    </div>
                </fieldset>      
            </div>
         </div>   
        <div style="text-align:center;padding:5px;">
            <a id="Create" class="mini-button"  onclick="onSaveData('Create')" style="display:none">@Resources.Common_Resource.ResourceManager.GetString("OK")</a>               
            <a id="Modify" class="mini-button" onclick="onSaveData('Modify')" style="display:none">@Resources.Common_Resource.ResourceManager.GetString("OK")</a>                     
            <a class="mini-button" onclick="CloseWindow('cancel')" style="width:60px;">@Resources.Common_Resource.ResourceManager.GetString("Cancel")</a>       
        </div>  
    </form>
    <script type="text/javascript">
        mini.parse();
        var form = new mini.Form("#employeeForm");
        function onFileSelect(e) {
            //alert("选择文件");
        }
        function onUploadSuccess(e) {
            var Rsp = mini.decode(e.serverData);
            //alert(mini.decode(Rsp));
            //this.setText("");
            var photoName = mini.get("employeePhoto" + Rsp.Obj[1]);
            photoName.setValue(Rsp.Obj[0]);
            $("#ImgPr" + Rsp.Obj[1]).attr('src', Rsp.Obj[0]);
        }
        function onUploadError(e) {
            var Rsp = mini.decode(e.serverData);
            mini.alert(Rsp.Message);
        }

        function startUpload(e) {
            var fileupload = mini.get("fileupload"+e);
            fileupload.startUpload();
        }
        //加载窗口信息
        function Show(data) {
            //跨页面传递的数据对象，克隆后才可以安全使用
            receiveData = mini.clone(data);
            if (receiveData.action == "Modify") {

                $("#Modify").attr('style', 'width:60px;margin-right:20px;');
            }
            else if (receiveData.action == "Create") {

                $("#Create").attr('style', 'width:60px;margin-right:20px;');
            }
            $.ajax({
                url: "../EmployeeManage/Show?data=" + data.id,
                cache: false,
                success: function (json) {
                    var Rsp = mini.decode(json);
                    if (Rsp.ErrorCode == "Success") {
                        form.setData(Rsp.Obj);
                        //显示Photo1的图片
                        var photoName = mini.get("employeePhoto1");
                        $("#ImgPr1").attr('src', photoName.getValue());
                        //显示Photo2的图片
                        var photoName = mini.get("employeePhoto2");
                        $("#ImgPr2").attr('src', photoName.getValue());
                    } else {
                        mini.alert(Rsp.Message);
                    }

                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseText);
                    CloseWindow();
                }
            });
        }

        function onSaveData(type) {
            var data = form.getData();
            form.validate();
            if (form.isValid() == false) return;
            var json = mini.encode(data);
            //获取操作类型（新建/修改）
            var url;
            if (type == 'Create')
            {
                //新建
                url = "/EmployeeManage/Create";
            }
            else if (type == 'Modify')
            {   //编辑
                url = "/EmployeeManage/Modify";
            }

            $.ajax({
                url: url,
                type: 'post',
                data: { data: json },
                cache: false,
                success: function (json) {

                    var Rsp = mini.decode(json);
                    if (Rsp.ErrorCode == "Success") {
                        CloseWindow("save");
                    } else {

                        mini.alert(Rsp.Message);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseText);
                    CloseWindow();
                }
            });
        }
        function CloseWindow(action) {
            if (action == "close" && form.isChanged()) {
                if (confirm("数据被修改了，是否先保存？")) {
                    return false;
                }
            }
            if (window.CloseOwnerWindow) return window.CloseOwnerWindow(action);
            else window.close();
        }

    </script>
</body>
</html>