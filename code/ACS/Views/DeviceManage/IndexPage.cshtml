<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>设备面板</title>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
        <link href="../../Script/demo.css" rel="stylesheet" type="text/css" />
        <script src="../../Scripts/boot.js" type="text/javascript"></script>
 <style>

      html, body{
        margin:10px;padding:0;border:0;width:100%;height:100%;overflow:hidden;
     } 
     .my-label
     {
         padding-left: 1px;
         width: 200px;
         text-align:right;
     }
      .my-result
     {
         padding-left: 1px;
         width: 200px;
         text-align:left;
     }
</style>
    </head>
<body> 
<style type="text/css">
    html, body{
        margin:0;padding:0;border:0;width:100%;height:100%;overflow:hidden;
    }    
</style>

<div class="mini-fit" >
         <div class="mini-splitter" style="width:100%;height:100%;">
            <div size="255px" showCollapseButton="true">
                <!----设备树--->
                 <div class="mini-panel" title="设备管理" style="width:100%;height:100%;" showToolbar="true">
                    <!--toolbar-->
                    <div property="toolbar">
                        <a class="mini-button" iconCls="icon-reload" onclick="treeUpdate()">刷新</a>
                        <a class="mini-button" iconCls="icon-add" onclick="onModifyNode('Create')">增加</a>
                        <a class="mini-button" iconCls="icon-edit" onclick="onModifyNode('Modify')">编辑</a>
                        <a class="mini-button" iconCls="icon-remove" onclick="onRemoveNode()">删除</a>
                    </div>                  
                     <!----设备树--->
                        <ul id="deviceTree" class="mini-tree" url="LoadTree" style="width:inherit;padding:3px;" 
                            showTreeIcon="true" onNodeClick="onNodeClick()" expandOnNodeClick="true"
                            textField="MenuName" idField="Id" parentField="Pid" resultAsTree="false">
                        </ul>
                </div>         
            </div>
            <!----设备信息栏--->
            <div showCollapseButton="true">
                <div id ="DoorTimeView" class="mini-panel" title="时间段管理" style="width:100%;height:100%;" showToolbar="true">
                    @Html.Partial("DoorTimeView") 
                </div>
                <div id ="DeviceView" class="mini-panel" title="设备管理" style="width:100%;height:100%;" showToolbar="true">
                    @Html.Partial("DeviceView") 
                    <!--<div id="content" class="mini-panel" style="width:100%;height:100%;" showHeader="false"></div>-->
                </div>    
             </div>
          </div>        
</div>
    <script type="text/javascript">
        mini.parse();
        var form = new mini.Form("form1");
        var grid = mini.get("#doorTimeGird");
        //新增、编辑控制器
        function onModifyNode(type) {
            var tree = mini.get("deviceTree");
            var node = tree.getSelectedNode();
            var titleName;
            var value;
            var url;
            if (type == "Modify") {
                if (!node)
                {
                    mini.alert("请选择一个节点");
                    return;
                }
                //编辑控制器
                if (node._level == 0) {
                    titleName = "编辑控制器";
                    value = node.Id.replace("C_", "");
                    url = "../DeviceManage/ShowPage";
                }
                    //编辑门
                else if (node._level == 1)
                {
                    titleName = "编辑门";
                    value = node.Id.replace("D_", "");
                    url = "../DeviceManage/DoorPage";
                }
            }
            //新增控制器
            else if (type == "Create") {
                titleName = "新增控制器";
                url = "../DeviceManage/ShowPage";
                value = null;
            }
            mini.open({
                url: url,
                title: titleName, width: 350, height: 350,
                onload: function () {
                    var iframe = this.getIFrameEl();
                    var data = { action: type, id: value};
                    iframe.contentWindow.Show(data);

                },
                ondestroy: function (action) {

                    if (action == "ok")     //关闭窗口时点击的是确定
                    {
                        tree.load("../DeviceManage/LoadTree");
                    }
                }
            });
        }
        //删除控制器
        function onRemoveNode(e) {
            var tree = mini.get("deviceTree");
            var node = tree.getSelectedNode();
            if ((node)&&(node._level == 0)) {

                var value = node.Id.replace("C_", "");
                var ids = Array(value);
                var json = mini.encode(ids);

                if (confirm("将更新与该控制器有关的权限信息，是否继续？")) {
                    var messageid = mini.loading("正在删除控制器及配置信息...");
                    setTimeout(function () {
                        mini.hideMessageBox(messageid);
                    }, 3000);

                    $.ajax({
                        url: "../DeviceManage/Delete",
                        type: 'post',
                        data: { data: json },
                        cache: false,
                        success: function (json) {
                            var rsp = mini.decode(json);
                            if (rsp.ErrorCode == "Success") {
                                treeUpdate();
                                mini.hideMessageBox(messageid);
                                mini.alert("操作成功");

                            }
                            else {
                                alert(text);
                            }
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            alert(jqXHR.responseText);
                        }
                    });
                }


            } else {
                mini.alert('请选择一个控制器');
            }

        }
        //点击控制器或者门
        function onNodeClick() {
            var id;
            var tree = mini.get("deviceTree");
            node = tree.getSelectedNode();
            if ((node)&&(node._level == 0)) {
                $("#DeviceView").attr('style', 'width:100%;height:100%;');
                $("#DoorTimeView").attr('style', 'display:none');
                id = node.Id.replace("C_", "");
                var form = new mini.Form("form1");
                $.ajax({
                    url: "../DeviceManage/Show?data=" + id,
                    cache: false,
                    success: function (json) {
                        var Rsp = mini.decode(json);
                        if (Rsp.ErrorCode == "Success") {
                            form.setData(Rsp.Obj);
                        } else {
                            mini.alert(Rsp.Message);
                        }

                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert(jqXHR.responseText);
                        CloseWindow();
                    }
                });
            }
            if ((node)&&(node._level == 1)) {
                $("#DoorTimeView").attr('style', 'width:100%;height:100%;');
                $("#DeviceView").attr('style', 'display:none');
                id = node.Id.replace("D_", "");
                grid.load({ data: id });
            }
        }

        function treeUpdate() {
            mini.get("deviceTree").load();
        }

    </script>
        
    </body>
</html>