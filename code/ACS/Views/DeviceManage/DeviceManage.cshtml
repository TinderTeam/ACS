<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>设备面板</title>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
        <link href="../../script/demo.css" rel="stylesheet" type="text/css" />
        <script src="../../Scripts/boot.js" type="text/javascript"></script>
 <style>

      html, body{
        margin:10px;padding:0;border:0;width:100%;height:100%;overflow:hidden;
     } 
     .my-label
     {
         padding-left: 1px;
         width: 200px;
         text-align:right;
     }
      .my-result
     {
         padding-left: 1px;
         width: 200px;
         text-align:left;
     }
</style>
    </head>
<body> 
<style type="text/css">
    html, body{
        margin:0;padding:0;border:0;width:100%;height:100%;overflow:hidden;
    }    
</style>

<div class="mini-fit" >
    <div class="mini-panel" title="设备管理" iconCls="icon-add" style="width:100%;height:100%;" 
    showToolbar="false" showCloseButton="false" showFooter="true">
       
        
        <!--body-->

         <div class="mini-splitter" style="width:100%;height:100%;">
            <div size="200px" showCollapseButton="true">
                <!----设备树--->
                 <div class="mini-panel" title="门禁权限管理" style="width:100%;height:100%;" showToolbar="true">
                    <!--toolbar-->
                    <div property="toolbar">
                        <input type="button" value="添加" onclick="onAddDevice()" style='vertical-align:middle;'/>                        
                        <input type="button" value="删除" onclick="onRemoveDevice()" style='vertical-align:middle;'/>
                    </div>                  
                     <!----设备树--->
                        <ul id="deviceTree" class="mini-tree" url="DeviceTree" style="width:inherit;padding:3px;" 
                            showTreeIcon="true" 
                            onNodeClick="onNodeClick()"
                            expandOnNodeClick="true"
                            textField="text" idField="id" parentField="pid" resultAsTree="false">
                        </ul>
                </div>         
            </div>
            <!----设备信息栏--->
            <div showCollapseButton="true">
                <div class="mini-fit" > 
                    <div id="content" class="mini-panel" style="width:100%;height:100%;" showHeader="false"></div>
                </div>   
             </div>
          </div>        
        <!--footer-->
        <div property="footer">
            <input type='button' value='立刻刷新' onclick=" treeUpdate()"/>
        </div>
    </div>
</div>
    <script type="text/javascript">
        mini.parse();

        var form = new mini.Form("form1");
        labelModel();

        function labelModel() {
            var fields = form.getFields();
            for (var i = 0, l = fields.length; i < l; i++) {
                var c = fields[i];
                if (c.setReadOnly) c.setReadOnly(true);     //只读
                if (c.setIsValid) c.setIsValid(true);      //去除错误提示
                if (c.addCls) c.addCls("asLabel");          //增加asLabel外观
            }
        }

        function inputModel() {
            var fields = form.getFields();
            for (var i = 0, l = fields.length; i < l; i++) {
                var c = fields[i];
                if (c.setReadOnly) c.setReadOnly(false);
                if (c.removeCls) c.removeCls("asLabel");
            }
            mini.repaint(document.body);
        }
        function onNodeClick() {
          
            var id;
            var tree = mini.get("deviceTree")
            node = tree.getSelectedNode()
            var inner = mini.get(content);
          
            if (node.id.indexOf("C") != -1) {
                id=node.id.replace("C", "");
                inner.load("DeviceView?DeviceID="+id);
            }
            if (node.id.indexOf("D") != -1) {
                id = node.id.replace("D", "");
                inner.load("DoorView?DoorID="+id);
            }
        }
        function treeUpdate() {
            mini.get("deviceTree").load();
        }
       
        function onRemoveDevice(e) {
            var tree = mini.get("deviceTree");
            var node = tree.getSelectedNode();
            var id = node.ControlID;
            $.ajax({
                url: "../DeviceManage/delete?id="+id,
                type: 'post',
                data:  "",
                cache: false,
                success: function (json) {
                    var rsp = mini.decode(json);
                    if (rsp.ErrorCode == "Success") {
                        treeUpdate();
                    }
                    else {
                        alert(text);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseText);
                }
            });
        }

        function onAddDevice(e) {
            var tree = mini.get("deviceTree");
            var node = tree.getSelectedNode();
            var name = "新设备";
            $.ajax({
                url: "../DeviceManage/DeviceAdd?Name=" + name,
                type: 'post',
                data: "",
                cache: false,
                success: function (json) {
                    var rsp = mini.decode(json);
                    if (rsp.ErrorCode == "Success") {
                        treeUpdate();
                    }
                    else {
                        alert(text);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(jqXHR.responseText);
                }
            });
        }

    </script>
        
    </body>
</html>