<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>员工面板</title>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
        <link href="../../script/demo.css" rel="stylesheet" type="text/css" />
        <script src="../../Scripts/boot.js" type="text/javascript"></script>
 <style>
     .my-label
     {
         padding-left: 1px;
         width: 200px;
         text-align:right;
     }
      .my-result
     {
         padding-left: 1px;
         width: 200px;
         text-align:left;
     }

     </style>
    </head>
<body> 
<style type="text/css">
    html, body{
        margin:0;padding:0;border:0;width:100%;height:100%;overflow:hidden;
    }    
</style>

<div class="mini-fit" >
    <div class="mini-panel" title="设备监控" iconCls="icon-add" style="width:100%;height:100%;" 
    showToolbar="false" showCloseButton="false" showFooter="true">
       
        
        <!--body-->

         <div class="mini-splitter" style="width:100%;height:100%;">
            <div size="200px" showCollapseButton="true">
                <!----设备树--->
                <div class="mini-splitter" style="width:100%;height:100%;" handlerSize="1" vertical="true" allowResize="false">
                    <div size="70px" showCollapseButton="false" style="height:100%;">
                        <!----设备搜索--->
                        <table class="form-table" border="0" cellpadding="1" cellspacing="1" style="width:100%;height:inherit">
                            <tr>
                                <td class="form-label">设备编号查询：</td>
                                
                            </tr>
                            <tr>
                                <td >
                                    <input name="deviceID" class="mini-textbox" />
                                </td>
                                <td >
                                   <a class="mini-button" onclick="onClick" >搜索</a>
                                </td>
                            </tr>
                        </table>             
                    </div>
                    <div showCollapseButton="false">
                        <!----设备树--->
                        <ul id="deviceTree" class="mini-tree" url="DeviceTree" style="width:inherit;padding:3px;" 
                            showTreeIcon="true" textField="text" idField="id" parentField="pid" resultAsTree="false">
                        </ul>
                    </div>        
                </div>
            </div>
            <!----设备信息栏--->

            <div class="mini-fit" >
                <div id ="datagrid1" class="mini-datagrid" style="width:100%;height:100%;" allowResize="true"
                    url="Load"  idField="HolidayID" multiSelect="true">
                    <div property="columns">
                        <div type="checkcolumn" ></div>                  
                        <div field="ControlName" width="70" headerAlign="center" allowSort="true">控制器名称</div>    
                        <div field="FireTime" width="70" headerAlign="center" allowSort="true">火警时间</div>    
                        <div field="AlarmTime" width="70" headerAlign="center" allowSort="true">报警时间</div>
                        <div field="TimeTamp" width="70" headerAlign="center" allowSort="true">时间</div>   
                        <div field="OpenTime" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("HolidayManage_HolidayNote")</div>
                           
                    </div>
                </div> 
            </div>        
        </div>
        <!--footer-->
        <div property="footer">
            <input type='button' value='立刻刷新'/>
        </div>
    </div>
</div>
    <script type="text/javascript">
        mini.parse();
        var grid = mini.get("#datagrid1");
        grid.load();

        var form = new mini.Form("form1");
        labelModel();

        function labelModel() {
            var fields = form.getFields();
            for (var i = 0, l = fields.length; i < l; i++) {
                var c = fields[i];
                if (c.setReadOnly) c.setReadOnly(true);     //只读
                if (c.setIsValid) c.setIsValid(true);      //去除错误提示
                if (c.addCls) c.addCls("asLabel");          //增加asLabel外观
            }
        }

        function inputModel() {
            var fields = form.getFields();
            for (var i = 0, l = fields.length; i < l; i++) {
                var c = fields[i];
                if (c.setReadOnly) c.setReadOnly(false);
                if (c.removeCls) c.removeCls("asLabel");
            }
            mini.repaint(document.body);
        }
    </script>
        
    </body>
</html>