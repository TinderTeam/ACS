<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>员工管理</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <link href="../../Script/demo.css" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/boot.js" type="text/javascript"></script>
</head>
<body>
<style type="text/css">
    html, body{
        margin:0;padding:0;border:0;width:100%;height:100%;overflow:hidden;
    }    
</style>   
    <fieldset style="width:95%;border:solid 1px #aaa;margin-top:8px;position:relative;">
        <legend>@Resources.Label_Resource.ResourceManager.GetString("EventRecord_CardRecordSearch")</legend>
        <div id="editForm1" style="padding:5px;">
            <input class="mini-hidden" name="id"/>
            <table style="width:100%;">
                <tr>
                    <td style="width:80px;">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_DeptSearch")</td>
                    <td style="width:150px;">
                        <input name="DeptID" class="mini-combobox" valueField="id" textField="text" 
                               url="../../Test/Dept.txt" onvaluechanged="onDeptChanged" required="true"
                               emptyText="请选择部门"/>
                    </td>
                    <td style="width:80px;">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_JobSearch")</td>
                    <td style="width:150px;">
                        <input name="JobID" class="mini-combobox" valueField="id" textField="text"
                               url="../../Test/Job.txt" required="true" emptyText="请选择职位"/>
                    </td>
                    <td style="width:80px;">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_DoorSearch")</td>
                    <td style="width:150px;"><input name="salary" class="mini-textbox"></td>
                    <td style="width:80px;">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_TimeSearch")</td>
                    <td style="width:150px;">
                        <input name="birthday" class="mini-datepicker" />-
                    </td>
                    <td style="width:150px;">
                        -<input name="birthday" class="mini-datepicker" />
                    </td>  
                </tr>
                <tr>
                    <td>@Resources.Label_Resource.ResourceManager.GetString("EventRecord_CardNoSearch")</td>
                    <td><input name="salary" class="mini-textbox"/></td>
                    <td>@Resources.Label_Resource.ResourceManager.GetString("EventRecord_NameSearch")</td>
                    <td><input name="salary" class="mini-textbox"/></td>
                    <td>@Resources.Label_Resource.ResourceManager.GetString("EventRecord_CodeSearch")</td>
                    <td><input name="salary" class="mini-textbox"/></td>
                    <td>@Resources.Label_Resource.ResourceManager.GetString("EventRecord_EventTypeSearch")</td>
                    <td><input id="birthday" name="birthday" class="mini-datepicker" /></td>
                    <td style="width:150px;">
                        <a class="mini-button " iconCls="icon-search" onclick="onClick">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_Search")</a>
                    </td>
                </tr>
            </table>
        </div>
    </fieldset>
<div class="mini-fit" >
    <div id ="datagrid1" class="mini-datagrid" style="width:100%;height:100%;" allowResize="true"
        url="Load"  idField="EmployeeID" multiSelect="true">
        <div property="columns">
            <!--<div type="indexcolumn"></div>        -->
            <div type="checkcolumn" ></div>                  
            <div field="EmployeeName" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_EmployeeName")</div>    
            <div field="EmployeeCode" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_EmployeeCode")</div>    
            <div field="CardNo" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_CardNo")</div>
            <div field="EventTime" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_EventTime")</div>   
            <div field="ControlID" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_ControlID")</div>
            <div field="DoorID" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_DoorID")</div>
            <div field="EventType" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_EventType")</div> 
            <div field="Modify" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_Modify")</div>    
            <div field="EnglishName" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_EnglishName")</div>    
            <div field="Sex" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_Sex")</div>

            <div field="EmpEnable" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_EmpEnable")</div>   
            <div field="DeptID" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_DeptID")</div>
            <div field="JobID" width="80" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_JobID")</div>
            <div field="Leave" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_Leave")</div>   
            <div field="LeaveDate" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_LeaveDate")</div>
            <div field="BeKQ" width="80" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_BeKQ")</div>
            <div field="RegTime" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_RegTime")</div>   
            <div field="PersonCode" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_PersonCode")</div>
            <div field="Phone" width="80" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_Phone")</div>
            <div field="Email" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_Email")</div>   
            
            <div field="Car" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_Car")</div>
            <div field="Birthday" width="80" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_Birthday")</div>
            <div field="Home" width="80" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_Home")</div>
            <div field="Note1" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_Note1")</div>   
            <div field="Note2" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_Note2")</div>
            <div field="Note3" width="80" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_Note3")</div>
            <div field="Note4" width="70" headerAlign="center" allowSort="true">@Resources.Label_Resource.ResourceManager.GetString("EventRecord_Note4")</div>   
                               
        </div>
    </div> 
</div>
    <script type="text/javascript">
        mini.parse();
        var grid = mini.get("#datagrid1");
        grid.load();
        //grid.sortBy("createtime", "desc");

        function search() {
            var key = mini.get("key").getValue();
            grid.load({ key: key });
        }
        function onKeyEnter(e) {
            search();
        }
    </script>
</body>
</html>