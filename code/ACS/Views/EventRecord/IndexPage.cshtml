<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>员工管理</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <link href="../../Script/demo.css" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/boot.js" type="text/javascript"></script>
</head>
<body>
<style type="text/css">
    html, body{
        margin:0;padding:0;border:0;width:100%;height:100%;overflow:hidden;
    }    
</style>   
    <fieldset style="width:95%;border:solid 1px #aaa;margin-top:8px;position:relative;">
        <legend>@Resources.EventRecord_Resource.ResourceManager.GetString("EventRecordSearch")</legend>
        <div id="editForm1" style="padding:5px;">
            <input class="mini-hidden" name="id"/>
            <form id="searchForm" method="post">
                <table style="width:100%;">
                    <tr>
                        <td style="width:80px;">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Dept")</td>
                        <td style="width:150px;">
                            <input name="DeptID" class="mini-combobox" valueField="DeptID" textField="DeptName" 
                            url="../DeptManage/LoadTree" allowInput="true" showNullItem="true" nullItemText="@Resources.Common_Resource.ResourceManager.GetString("PleaseSelect")"
                            />
                        </td>
                        <td style="width:80px;">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Job")</td>
                        <td style="width:150px;">
                            <input name="JobID" class="mini-combobox" valueField="JobID" textField="JobName"
                            url="../JobManage/LoadTree" allowInput="true" showNullItem="true" nullItemText="@Resources.Common_Resource.ResourceManager.GetString("PleaseSelect")"
                            />
                        </td>
                        <td style="width:80px;">@Resources.EventRecord_Resource.ResourceManager.GetString("Door")</td>
                        <td style="width:150px;"><input name="DoorName" class="mini-textbox"></td>
                        <td style="width:80px;">@Resources.EventRecord_Resource.ResourceManager.GetString("Time")</td>
                        <td style="width:150px;">
                            <input name="EventTimeStart" class="mini-datepicker" format="yyyy-MM-dd HH:mm:ss" timeFormat="HH:mm:ss" 
                                    showTime="true" showOkButton="true" showTodayButton="false"/>-
                        </td>
                        <td style="width:150px;">
                            -<input name="EventTimeEnd" class="mini-datepicker" format="yyyy-MM-dd HH:mm:ss" timeFormat="HH:mm:ss" 
                                    showTime="true" showOkButton="true" showTodayButton="false"/>
                        </td>  
                    </tr>
                    <tr>
                        <td>@Resources.EmployeeManage_Resource.ResourceManager.GetString("CardNo")</td>
                        <td><input name="CardNo" class="mini-textbox"/></td>
                        <td>@Resources.EmployeeManage_Resource.ResourceManager.GetString("EmployeeName")</td>
                        <td><input name="EmployeeName" class="mini-textbox"/></td>
                        <td>@Resources.EmployeeManage_Resource.ResourceManager.GetString("EmployeeCode")</td>
                        <td><input name="EmployeeCode" class="mini-textbox"/></td>
                        <td>@Resources.EventRecord_Resource.ResourceManager.GetString("EventType")</td>
                        <td>
                            <input name="EventTypeID" class="mini-combobox" valueField="EventTypeID" textField="EventTypeName" 
                                url="../EventRecord/LoadEventTypeList" allowInput="true" showNullItem="true" nullItemText="@Resources.Common_Resource.ResourceManager.GetString("PleaseSelect")"
                            />
                        </td>
                        <td style="width:150px;">
                            <a class="mini-button " iconCls="icon-search" onclick="search()">@Resources.Common_Resource.ResourceManager.GetString("Search")</a>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </fieldset>
    <div class="mini-toolbar" style="border-bottom:0;padding:0px;">
        <table style="width:100%;">
            <tr>
                <td style="width:100%;">
                    <a class="mini-button" iconCls="icon-remove" onclick="remove()">@Resources.Common_Resource.ResourceManager.GetString("Delete")</a>     
                </td>
            </tr>
        </table>           
    </div>
<div class="mini-fit" >
    <div id ="datagrid1" class="mini-datagrid" style="width:100%;height:100%;" allowResize="true"
        url="Load"  idField="EventID" multiSelect="true">
        <div property="columns">
            <div field ="EventID" type="checkcolumn" width="50px"></div>
            <div type="indexcolumn" width="50px"></div>        
            <div name="ForegroundColorColumn" field="ForegroundColor" width="70px" headerAlign="center" allowSort="true"></div>    
            <div name="BackgroundColorColumn" field="BackgroundColor" width="70px" headerAlign="center" allowSort="true"></div>                  
            <div field="EmployeeName" width="70px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("EmployeeName")</div>    
            <div field="EmployeeCode" width="100px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("EmployeeCode")</div>    
            <div field="CardNo" width="100px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("CardNo")</div>
            <div field="EventTime" width="150px" headerAlign="center" allowSort="true" dateFormat="yyyy-MM-dd HH:mm:ss">@Resources.EventRecord_Resource.ResourceManager.GetString("Time")</div>   
            <div field="ControlName" width="100px" headerAlign="center" allowSort="true">@Resources.EventRecord_Resource.ResourceManager.GetString("Control")</div>
            <div field="DoorName" width="70px" headerAlign="center" allowSort="true">@Resources.EventRecord_Resource.ResourceManager.GetString("Door")</div>
            <div field="EventTypeName" width="70px" headerAlign="center" align="center" allowSort="true">@Resources.EventRecord_Resource.ResourceManager.GetString("EventType")</div> 
            <div field="Modify" width="70px" headerAlign="center" allowSort="true" renderer ="onYesRenderer">@Resources.EventRecord_Resource.ResourceManager.GetString("EventRecordModify")</div>    
            <div field="EnglishName" width="70px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("EnglishName")</div>    
            <div field="Sex" width="70px" headerAlign="center" allowSort="true" align="center" renderer="onSexRenderer">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Sex")</div>

            <div field="EmpEnable" width="70px" headerAlign="center" allowSort="true" align="center" renderer ="onYesRenderer">@Resources.EmployeeManage_Resource.ResourceManager.GetString("LogOut")</div>   
            <div field="DeptName" width="70px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Dept")</div>
            <div field="JobName" width="80px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Job")</div>
            <div field="Leave" width="70px" headerAlign="center" allowSort="true" align="center" renderer ="onYesRenderer">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Leave")</div>   
            <div field="LeaveDate" width="70px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("LeaveDate")</div>
            <div field="BeKQ" width="80px" headerAlign="center" allowSort="true" align="center" renderer ="onYesRenderer">@Resources.EmployeeManage_Resource.ResourceManager.GetString("BeKQ")</div>
            <div field="RegTime" width="70px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("RegTime")</div>   
            <div field="PersonCode" width="70px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("PersonCode")</div>
            <div field="Phone" width="80px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Phone")</div>
            <div field="Email" width="70px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Email")</div>   
            
            <div field="Car" width="70px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Car")</div>
            <div field="Birthday" width="80px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Birthday")</div>
            <div field="Home" width="80px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Home")</div>
            <div field="Note1" width="70px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Note1")</div>   
            <div field="Note2" width="70px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Note2")</div>
            <div field="Note3" width="80px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Note3")</div>
            <div field="Note4" width="70px" headerAlign="center" allowSort="true">@Resources.EmployeeManage_Resource.ResourceManager.GetString("Note4")</div>   
                               
        </div>
    </div> 
</div>
    @Html.Partial("../Public/js")
    <script type="text/javascript">
        mini.parse();
        var grid = mini.get("#datagrid1");
        grid.load();
        grid.hideColumn("ForegroundColorColumn");
        grid.hideColumn("BackgroundColorColumn");
        //grid.sortBy("EventTime", "desc");

        //根据事件类型标记颜色
        grid.on("drawcell", function (e) {
            var record = e.record;
            //给帐号列，增加背景色
            if (e.field == "EventTypeName") {
                e.cellStyle = "background:" + record.BackgroundColor + ";color:" + record.ForegroundColor;
            }

        });

        //删除记录
        function remove() {

            var rows = grid.getSelecteds();
            if (rows.length > 0) {
                if (confirm("@Resources.Common_Resource.ResourceManager.GetString("DeleteRowConfirm")")) {
                    //获取选中的对象ID
                    var ids = [];
                    for (var i = 0, l = rows.length; i < l; i++) {
                        var r = rows[i];
                        ids.push(r.EventID);
                    }
                    var idList = mini.encode(ids);
                    $.ajax({
                        url: "../EventRecord/Delete?data=" + idList,
                        success: function (json) {
                            var Rsp = mini.decode(json);
                            if (Rsp.ErrorCode == "Success") {
                                grid.reload();
                            }
                            mini.alert(Rsp.Message);
                        },
                        error: function () {
                        }
                    });
                }
            } else {
                mini.alert("@Resources.Common_Resource.ResourceManager.GetString("PleaseSelectRow")");
            }
        }

        //搜索
        function search() {

            var form = new mini.Form("#searchForm");
            var searchData = form.getData();
            var json = mini.encode(searchData);
            grid.load({ data: json });

        }
        $("#key").bind("keydown", function (e) {

            if (e.keyCode == 13) {
                return false;

            }
        });
    </script>
</body>
</html>