    <script type="text/javascript">

        function onEditNode(type) {
            var tree = mini.get("tree1");
            var node = tree.getSelectedNode();
            var value = tree.getValue();
            if (node) {
                if (type == "Edit") {
                    var titleName = "编辑部门";
                }
                else if (type == "Add") {
                    var titleName = "新增部门";
                }
                mini.open({
                    url: "../DeptManage/DeptEdit",
                    title: titleName, width: 350, height: 350,
                    onload: function () {
                        var iframe = this.getIFrameEl();
                        var data = { action: type, id: value };
                        iframe.contentWindow.Show(data);

                    },
                    ondestroy: function (action) {

                        if (action == "ok")     //关闭窗口时点击的是确定
                        {
                            var iframe = this.getIFrameEl();
                            var data = iframe.contentWindow.GetData();
                            data = mini.clone(data);

                            if (type == "Add") {
                                var newNode = { text: data.DeptName };
                                tree.addNode(newNode, "add", node);
                            }
                            else if (type == "Edit") {
                                tree.updateNode(node, { text: data.DeptName });
                                //tree.load("../DeptManage/LoadTree");
                            }
                        }


                    }
                });
            }
            else {
                alert("请选中一个节点");
            }
        }
        function onRemoveNode(e) {
            var tree = mini.get("tree1");
            var value = tree.getValue();
            var node = tree.getSelectedNode();
            
            if (node) {
                if (confirm("确定删除选中节点?")) {

                    $.ajax({
                        url: "../DeptManage/DeleteDept",
                        type: 'post',
                        data: { data: value },
                        cache: false,
                        success: function (text) {

                            if (text == "Success") {
                                mini.alert("删除成功！");
                                tree.removeNode(node);
                            }
                            else {
                                alert(text);
                            }
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            alert(jqXHR.responseText);
                        }
                    });
                }
            }
            else {
                alert("请选中一个节点");
            }
        }

    </script>
