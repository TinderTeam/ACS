         <!--toolbar-->
        <div property="toolbar">
                              <a class="mini-button" iconCls="icon-addfolder" onclick="onEditNode('Add')" plain="true">增加</a>
                    <a class="mini-button" iconCls="icon-edit" onclick="onEditNode('Edit')" plain="true">修改</a>
                    <a class="mini-button" iconCls="icon-remove" onclick="onRemoveNode()" plain="true">删除</a>
        </div>                  
        <!--body-->
            <ul id="tree1" class="mini-tree" url="../DeptManage/LoadTree" style="width:100%;height:100%;padding:0px;" 
                    showTreeIcon="true" textField="text" idField="id" parentField="pid" resultAsTree="false"  
