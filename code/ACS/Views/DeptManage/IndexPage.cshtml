<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>新增门禁权限</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <link href="../../script/demo.css" rel="stylesheet" type="text/css" />
    <script src="../../scripts/boot.js" type="text/javascript"></script>
</head>
<body>
<style type="text/css">
    html, body{
        margin:0px;padding:0;border:0;width:100%;height:100%;overflow:hidden;
    }    
</style>
<div class="mini-fit" >
    <div class="mini-panel" title="部门管理" style="width:100%;height:100%;" showToolbar="true">
         <!--toolbar-->
        <div property="toolbar">
            <a class="mini-button" iconCls="icon-addfolder" onclick="onEditNode('Add')" plain="true">增加</a>
            <a class="mini-button" iconCls="icon-edit" onclick="onEditNode('Edit')" plain="true">修改</a>
            <a class="mini-button" iconCls="icon-remove" onclick="onRemoveNode()" plain="true">删除</a>
        </div>                  
        <!--body-->
        <ul id="deptTree" class="mini-tree" url="../DeptManage/LoadTree" style="width:100%;height:100%;padding:0px;" 
            showTreeIcon="true" textField="DeptName" idField="DeptID" parentField="FatherDeptID" resultAsTree="false"  
            allowDrag="true" allowDrop="true" 
            >
        </ul>
    </div>
</div>
 
  
<script type="text/javascript">

    //新增、编辑部门
    function onEditNode(type) {
        var tree = mini.get("deptTree");
        var node = tree.getSelectedNode();
        var fatherNode = tree.getParentNode(node);
        var value = tree.getValue();
        if (node) {
            if (type == "Edit") {
                var titleName = "编辑部门";
            }
            else if (type == "Add") {
                var titleName = "新增部门";
            }
            mini.open({
                url: "../DeptManage/ShowPage",
                title: titleName, width: 350, height: 350,
                onload: function () {
                    var iframe = this.getIFrameEl();
                    var data = { action: type, id: value, FatherDeptName: fatherNode.DeptName, DeptName: node.DeptName };
                    iframe.contentWindow.Show(data);

                },
                ondestroy: function (action) {

                    if (action == "ok")     //关闭窗口时点击的是确定
                    {
                        var iframe = this.getIFrameEl();
                        var data = iframe.contentWindow.GetData();
                        data = mini.clone(data);

                        if (type == "Add") {
                            var newNode = { DeptName: data.DeptName };
                            tree.addNode(newNode, "add", node);
                        }
                        else if (type == "Edit") {
                          
                            tree.updateNode(node, { DeptName: data.DeptName });
                            //tree.load("../DeptManage/LoadTree");
                        }
                    }


                }
            });
        }
        else {
            alert("请选中一个节点");
        }
    }
    //删除部门
    function onRemoveNode(e) {
         
        var tree = mini.get("deptTree");
        var value = tree.getValue();
 
        var node = tree.getSelectedNode();
        var ids = Array(value);
        var json = mini.encode(ids);
    
        if (node) {
            if (confirm("确定删除选中节点?")) {

                $.ajax({
                    url: "../DeptManage/Delete",
                    type: 'post',
                    data: { data: json },
                    cache: false,
                    success: function (json) {
                        var Rsp = mini.decode(json);
                        if (Rsp.ErrorCode == "Success") {
                            mini.alert("删除成功！");
                            tree.removeNode(node);
                        }
