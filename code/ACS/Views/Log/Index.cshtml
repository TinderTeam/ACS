<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>系统日志</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <link href="../../script/demo.css" rel="stylesheet" type="text/css" />
    <script src="../../scripts/boot.js" type="text/javascript"></script>
</head>
<body>
<style type="text/css">
    html, body{
        margin:0;padding:0;border:0;width:100%;height:100%;overflow:hidden;
    }    
</style>
    <h1>系统日志</h1>
    <div class="mini-toolbar" style="border-bottom:0;padding:0px;">
            <table style="width:100%;">
                <tr>
                    <td style="width:100%;">
                        <a class="mini-button" iconCls="icon-remove" onclick="remove()">编辑</a>     
                    </td>
                </tr>
            </table>           
        </div>
<div class="mini-fit" >
    <div id ="datagrid1" class="mini-datagrid" style="width:100%;height:100%;" allowResize="true"
        url="Load"  idField="LogID" multiSelect="true">
        <div property="columns">
            <div field ="LogID" type="checkcolumn" ></div>   
            <div field="LogID" width="70" headerAlign="center" allowSort="true">日志ID</div>    
            <div field="LogDateTime" width="70" headerAlign="center" allowSort="true" align="center" dateFormat="yyyy-MM-dd HH:mm:ss">时间</div>    
            <div field="LogEvent" width="70" headerAlign="center" allowSort="true" align="center">操作类型</div>   
            <div field="Msg" width="70" headerAlign="center" allowSort="true" align="center">操作内容</div>
            <div field="Result" width="70" headerAlign="center" allowSort="true" align="center" >操作结果</div>
            
        </div>
    </div> 
</div>
    <script type="text/javascript">
        mini.parse();
        var grid = mini.get("#datagrid1");
        grid.load();

        function remove() {

            var rows = grid.getSelecteds();
            if (rows.length > 0) {
                if (confirm("确定删除选中记录？")) {
                    //获取选中的对象ID
                    var ids = [];
                    for (var i = 0, l = rows.length; i < l; i++) {
                        var r = rows[i];
                        ids.push(r.LogID);
                    }
                    var idList = mini.encode(ids);

                    grid.loading("操作中，请稍后......");
                    $.ajax({
                        url: "../Log/Delete?data=" + idList,
                        success: function (json) {
                            var Rsp = mini.decode(json);
                            if (Rsp.ErrorCode == "Success") {
                                grid.reload();
                            }
                            mini.alert(Rsp.Message);
                        },
                        error: function () {
                        }
                    });
                }
            } else {
                alert("请选中一条记录");
            }
        }
      
        function search() {
            
            var form = new mini.Form("#searchForm");
            var searchData = form.getData();
            var json = mini.encode(searchData);
            grid.load({ data: json });

        }
        $("#key").bind("keydown", function (e) {
            
            if (e.keyCode == 13) {
                return false;
                
            }
        });
    </script>
</body>
</html>