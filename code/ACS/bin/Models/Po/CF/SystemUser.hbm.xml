<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" >
  <class name="ACS.Models.Po.CF.SystemUser,ACS" table="t_user"  >

    <id name="UserID" column ="USER_ID" >
      <generator class ="identity"/>
    </id>

    <property name="UserName">
      <column name="USER_NAME" length="20"/>
    </property>

    <property name="Pswd">
      <column name="PSWD" length="10"/>
    </property>
    
    <property name="UserDesc">
      <column name="USER_DESC" length="200"/>
    </property>

    <property name="CreateUserID">
      <column name="CREATE_USER_ID"/>
    </property>
    
    <property name="CreateDate">
      <column name="CREATE_DATE"/>
    </property>

    <property name="ModifyUserID">
      <column name="MODIFY_USER_ID"/>
    </property>

    <property name="ModifyDate">
      <column name="MODIFY_DATE"/>
    </property>

  </class>
</hibernate-mapping>