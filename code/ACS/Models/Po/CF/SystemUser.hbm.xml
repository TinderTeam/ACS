<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" >
  <class name="ACS.Models.Po.CF.SystemUser,ACS" table="t_user"  >

    <id name="UserID" column ="USER_ID" >
      <generator class ="increment"/>
    </id>

    <property name="UserName" type="string">
      <column name="USER_NAME" length="255" unique="true"/>
    </property>

    <property name="Pswd" type="string">
      <column name="PSWD" length="255"/>
    </property>
    
    <property name="UserDesc" type="string">
      <column name="USER_DESC" length="255"/>
    </property>

    <property name="CreateUserID" type="int">
      <column name="CREATE_USER_ID"/>
    </property>
    
    <property name="CreateDate" type="DateTime">
      <column name="CREATE_DATE"/>
    </property>

    <property name="ModifyUserID" type="int">
      <column name="MODIFY_USER_ID"/>
    </property>

    <property name="ModifyDate" type="DateTime">
      <column name="MODIFY_DATE"/>
    </property>

  </class>
</hibernate-mapping>