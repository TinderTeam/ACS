<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" >
  <class name="ACS.Models.Po.Business.Dept,ACS" table="t_dept" >

    <id name="DeptID" column ="DEPT_ID" >
      <generator class ="increment"/>
    </id>

    <property name="DeptName" type="string">
      <column name="DEPT_NAME" length="255"/>
    </property>

    <property name="FatherDeptID" type="string">
      <column name="FATHER_DEPT_ID" length="255"/>
    </property>
    
    <property name="DeptCode" type="string">
      <column name="DEPT_CODE" length="255"/>
    </property>

    <property name="Note" type="string">
      <column name="NOTE" length="255"/>
    </property>

  </class>
</hibernate-mapping>